{
"schemaVersion": 2,
"dockerfileLines": [
"FROM php:7.4-apache",
"RUN apt-get update && apt-get install -y libzip-dev && docker-php-ext-install zip && docker-php-ext-install mysqli pdo pdo_mysql mbstring curl",
"RUN a2enmod rewrite",
"WORKDIR /var/www/html",
"COPY . /var/www/html/",
"RUN chown -R www-data:www-data /var/www/html/application/cache /var/www/html/application/logs",
"RUN chmod -R 755 /var/www/html/application/cache /var/www/html/application/logs",
"EXPOSE 80",
"CMD [ \"apache2-foreground\" ]"
]
}